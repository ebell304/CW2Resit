<html>

<head>
{{>header}}
</head>

<body class="container">

    <h2>Update Existing entry</h2>



    <form method="post" role="form">

        <div class="form-group">
            <label for="name">Item Name:</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Item Name" required>
        </div>

        <div class="form-group">
            <label for="description">Item Description:</label>
            <input type="text" class="form-control" id="description" name="description" placeholder="Item Name" required>
        </div>

        <div class="form-group">
            <label for="price">Price:</label>
            <input type="number" class="form-control" id="price" name="price" placeholder="Item Price" required>
        </div>

        <div class="form-group">
            <label for="tag">Tag:</label>
            <input type="text" class="form-control" id="tag" name="tag" placeholder="Tag" required>
        </div>

    

        <div class="form-group">
            <input type="submit" value="Update entry" class="btn btn-primary">
        </div>
    </form>

</body>

</html>