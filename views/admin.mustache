<html>

<head>
    {{>header}}
</head>

<body class="container">

  <div class="adminDashboard">

  <div>
  <h1>{{title}}</h1>
  </div>

    {{#user}}

    <a id="addUser" href="/addUser" class="btn btn-primary">
      Add New Staff
    </a>
      
    {{/user}}

  {{#users}}
    <div class="card staff">
      <div class="card-body">
            <h4 class="card-title">Username: {{user}}</h4>
            <p class="card-text">
                Role: <b>{{role}}</b>
            </p>
            <p class="card-text">
                Store: <b>{{store}}</b>
            </p>
      </div>
      <a id="removeStaff" href="/removeStaff/{{user}}" class="btn btn-primary">
        Remove Staff
      </a>
    </div>
  {{/users}}
    </div>
  </div>


  </div>


</body>


</html>