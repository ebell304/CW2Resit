<html>

<head>
    {{>header}}
</head>


<body class="container">

<div class="addUser">

<div>
<h1>{{title}}</h1>
</div>

<div class="card">
    <div class="card-body">
        
   <form method="post" action="/addUser">
    <div class="form-group">
        {{user-name-error}}
        <label for="username">Username</label>
        <input type="text" class="form-control" id="username" name="username" placeholder="Enter user name" required>
    </div>

    <div class="form-group">
        <label for="store">Store</label>
        <select class="form-control" name="store" id="store" required>
            <option value="north">North</option>
            <option value="east">East</option>
            <option value="south">South</option>
            <option value="west">West</option>
        </select>
    </div>

    <div class="form-group">
        <label for="password">Password (8 characters minimum)</label>
        <input type="password" class="form-control" id="pass" name="pass" placeholder="Enter password" minlength="8" required>
    </div>
    <div class="form-group addVolunteer">
        <input type="submit" value="Add Volunteer" class="btn btn-primary">
    </div>
</form>

    </div>
  </div>
</div>

</div>




</body>

</html>